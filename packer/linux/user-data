#cloud-config
#vim:syntax=yaml
users:
# A user by the name `ec2-user` is created in the image by default.
  - default
  - name: foobar
    lock_password: false
    plain_text_passwd: omglol
chpasswd:
  list: |
    ec2-user:ppp
    foobar:omglol
ssh_pwauth: true
# In the above line, do not add any spaces after 'ec2-user:'.
